page {
  background-color: #f5f7fa !important;
  min-height: 100% !important;
  margin: 0;
  padding: 0;
}

.my-container {
  padding: 30rpx 24rpx;
  background-color: #f5f7fa;
  min-height: 100vh;
  box-sizing: border-box;
  padding-top: 0;
  margin: 0;
  margin-bottom: -1px;
  padding-bottom: 1px;
}

/* 新增的收集状态样式 */
.collection-status {
  color: #48bb78;
  font-size: 24rpx;
  text-align: center;
  margin: 20rpx 0;
  padding: 10rpx;
  background: #f0fdf4;
  border-radius: 8rpx;
}

.collection-full {
  color: #e53e3e;
  font-size: 24rpx;
  text-align: center;
  margin: 20rpx 0;
  padding: 10rpx;
  background: #fee2e2;
  border-radius: 8rpx;
}

.form-wrapper {
  background: #ffffff;
  /* padding: 36rpx; */
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  margin-top: 10rpx;
}

.form-item {
  margin-bottom: 36rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.form-label {
  font-size: 24rpx;
  color: #2d3748;
  font-weight: 500;
  display: flex;
  align-items: center;
}

.form-label.required::after {
  content: "*";
  color: #e53e3e;
  margin-left: 6rpx;
  font-size: 28rpx;
}

.form-input {
  height: 80rpx;
  border: 1rpx solid #e2e8f0;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 24rpx;
  color: #2d3748;
  box-sizing: border-box;
}

.form-input:disabled {
  background-color: #f5f5f5;
  color: #9e9e9e;
}

.form-input::placeholder {
  color: #a0aec0;
  font-size: 22rpx;
}

.radio-group {
  display: flex;
  gap: 40rpx;
  padding: 10rpx 0;
}

.radio-group:disabled .radio-label {
  color: #9e9e9e;
}

.radio-label {
  font-size: 24rpx;
  color: #4a5568;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.checkbox-group {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
  padding: 10rpx 0;
}

.checkbox-group:disabled .checkbox-label {
  color: #9e9e9e;
  background: #f5f5f5;
}

.checkbox-label {
  font-size: 24rpx;
  color: #4a5568;
  display: flex;
  align-items: center;
  gap: 8rpx;
  background: #f8f9fa;
  padding: 12rpx 20rpx;
  border-radius: 12rpx;
  border: 1rpx solid #e2e8f0;
}

.form-tip {
  font-size: 20rpx;
  color: #ed8936;
  margin-top: 8rpx;
  display: flex;
  align-items: center;
  gap: 6rpx;
}

.submit-btn {
  height: 92rpx;
  background: linear-gradient(90deg, #4299e1, #38b2ac);
  color: white;
  font-size: 28rpx;
  font-weight: 500;
  border-radius: 20rpx;
  margin-top: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(66, 153, 225, 0.2);
  width: 100%;
}

.submit-btn:disabled {
  background: #cbd5e0;
  box-shadow: none;
}

.submit-btn::after {
  border: none;
}