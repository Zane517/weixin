.admin-container {
  padding: 20rpx 16rpx;
  background-color: #f3f4f6;
  min-height: 100vh;
}

/* 管理员头部 */
.admin-header {
  background-color: #1f2937;
  color: white;
  padding: 24rpx 20rpx;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
}

.admin-title {
  font-size: 30rpx;
  font-weight: 600;
  display: block;
  margin-bottom: 8rpx;
}

.admin-desc {
  font-size: 22rpx;
  color: #d1d5db;
}

/* 宿舍列表 */
.dorm-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 宿舍卡片 */
.dorm-card {
  background: white;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.dorm-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 24rpx;
  background-color: #4b5563;
  color: white;
}

.dorm-number {
  font-size: 26rpx;
  font-weight: 500;
}

.member-count {
  font-size: 22rpx;
  background-color: rgba(255, 255, 255, 0.2);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

/* 成员列表 */
.member-list {
  padding: 16rpx 24rpx;
}

.member-item {
  display: flex;
  gap: 16rpx;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f3f4f6;
}

.member-item:last-child {
  border-bottom: none;
}

.member-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  object-fit: cover;
  flex-shrink: 0;
}

.member-info {
  flex: 1;
}

.member-name {
  font-size: 24rpx;
  font-weight: 500;
  color: #111827;
  margin-bottom: 6rpx;
}

.member-details {
  display: flex;
  gap: 20rpx;
  font-size: 20rpx;
  color: #6b7280;
  margin-bottom: 8rpx;
}

/* 爱好标签 */
.hobby-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.hobby-tag {
  font-size: 18rpx;
  color: #4b5563;
  background-color: #f3f4f6;
  padding: 2rpx 12rpx;
  border-radius: 10rpx;
}

/* 空宿舍提示 */
.empty-dorm {
  text-align: center;
  padding: 30rpx 0;
  color: #9ca3af;
  font-size: 22rpx;
  background-color: #f9fafb;
  border-radius: 8rpx;
}